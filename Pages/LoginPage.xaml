<Page x:Class="UP._02._01_Vybornov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP._02._01_Vybornov.Pages"
      Title="Авторизация"
      FontFamily="Comic Sans MS"
      Height="650">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#ABCFCE"/>
        <SolidColorBrush x:Key="AccentColor" Color="#546F94"/>
        <SolidColorBrush x:Key="LightAccentColor" Color="#7D9BC2"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>

        <Style x:Key="LoginCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="40"/>
        </Style>

        <Style x:Key="LoginTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="LoginLabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,15,0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>

        <Style x:Key="LoginInputStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>

        <Style x:Key="LoginPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>

        <Style x:Key="PrimaryLoginButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="50"/>
        </Style>

        <Style x:Key="SecondaryLoginButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource LightAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="50"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackground}" Margin="0,0,0,-38">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Style="{StaticResource LoginCardStyle}"
                   Width="450" Margin="0,0,0,-15">

                <StackPanel>
                    <StackPanel HorizontalAlignment="Center"
                               Margin="0,0,0,40">
                        <Image Source="/Resources/logo.png" 
                              Width="80" 
                              Height="80" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                        <TextBlock Text="Вход в систему"
                                  Style="{StaticResource LoginTitleStyle}"/>
                    </StackPanel>

                    <TextBlock Text="ID Number (логин):"
                              Style="{StaticResource LoginLabelStyle}"/>

                    <TextBox x:Name="IdNumberTextBox"
                            Style="{StaticResource LoginInputStyle}"
                            MaxLength="50"/>

                    <TextBlock Text="Пароль:"
                              Style="{StaticResource LoginLabelStyle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                        </Grid.RowDefinitions>

                        <PasswordBox x:Name="PasswordBox"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Padding="12"
                                    FontSize="14"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BorderColor}"
                                    VerticalAlignment="Top"/>

                        <TextBox x:Name="VisiblePasswordTextBox"
                                Grid.Column="0"
                                Grid.Row="0"
                                Padding="12"
                                FontSize="14"
                                BorderThickness="1"
                                BorderBrush="{StaticResource BorderColor}"
                                VerticalAlignment="Top"
                                Visibility="Collapsed"/>

                        <Button Grid.Column="1"
                               Grid.Row="0"
                               Content="👁"
                               FontSize="14"
                               Background="Transparent"
                               BorderThickness="0"
                               Margin="5,0,0,0"
                               Padding="8"
                               VerticalAlignment="Top"
                               Click="TogglePasswordVisibilityClick"
                               ToolTip="Показать/скрыть пароль"/>
                    </Grid>

                    <Button x:Name="LoginButton" 
                           Content="Войти" 
                           Click="LoginButtonClick"
                           Style="{StaticResource PrimaryLoginButtonStyle}"
                           Margin="0,30,0,10"/>

                    <Button x:Name="GuestButton" 
                           Content="Войти как гость" 
                           Click="GuestButtonClick"
                           Style="{StaticResource SecondaryLoginButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>