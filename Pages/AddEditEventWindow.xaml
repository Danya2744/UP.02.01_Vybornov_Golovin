<Window x:Class="UP._02._01_Vybornov.Pages.AddEditEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавление мероприятия" 
        Height="700" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Comic Sans MS">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#ABCFCE"/>
        <SolidColorBrush x:Key="AccentColor" Color="#546F94"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>

        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="FormDatePickerStyle" TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource ErrorColor}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource SecondaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <TextBlock x:Name="TitleTextBlock" 
                      Text="Добавление мероприятия" 
                      FontSize="18" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel>
                <!-- ID (только для редактирования) -->
                <TextBlock x:Name="EventIdLabel" 
                          Text="ID мероприятия:" 
                          Style="{StaticResource FormLabelStyle}"
                          Visibility="Collapsed"/>
                <TextBox x:Name="EventIdTextBox"
                        Style="{StaticResource FormInputStyle}"
                        IsReadOnly="True"
                        Visibility="Collapsed"/>

                <!-- Название -->
                <TextBlock Text="Название мероприятия:*" 
                          Style="{StaticResource FormLabelStyle}"/>
                <TextBox x:Name="NameTextBox"
                        Style="{StaticResource FormInputStyle}"
                        MaxLength="200"/>
                <TextBlock x:Name="NameErrorText"
                          Style="{StaticResource ErrorTextStyle}"
                          Text="Название обязательно для заполнения"/>

                <!-- Логотип -->
                <TextBlock Text="Логотип (путь к файлу):" 
                          Style="{StaticResource FormLabelStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="LogoPathTextBox"
                            Style="{StaticResource FormInputStyle}"
                            Grid.Column="0"/>

                    <Button x:Name="BrowseLogoButton"
                            Content="Обзор"
                            Click="BrowseLogoButton_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="{StaticResource SecondaryBackground}"
                            Foreground="{StaticResource TextColor}"
                            Grid.Column="1"
                            Margin="10,0,0,10"/>
                </Grid>
                <TextBlock Text="Пример: /Resources/logo.png или C:\Images\logo.png"
                          FontSize="11"
                          Foreground="{StaticResource SecondaryTextColor}"
                          Margin="0,-5,0,10"/>

                <!-- Направление -->
                <TextBlock Text="Направление:*" 
                          Style="{StaticResource FormLabelStyle}"/>
                <ComboBox x:Name="DirectionComboBox"
                         Style="{StaticResource FormComboBoxStyle}"
                         DisplayMemberPath="direction_name"/>
                <TextBlock x:Name="DirectionErrorText"
                          Style="{StaticResource ErrorTextStyle}"
                          Text="Выберите направление"/>

                <!-- Город -->
                <TextBlock Text="Город проведения:*" 
                          Style="{StaticResource FormLabelStyle}"/>
                <ComboBox x:Name="CityComboBox"
                         Style="{StaticResource FormComboBoxStyle}"
                         DisplayMemberPath="city_name"/>
                <TextBlock x:Name="CityErrorText"
                          Style="{StaticResource ErrorTextStyle}"
                          Text="Выберите город"/>

                <!-- Даты -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Дата начала:*" 
                                  Style="{StaticResource FormLabelStyle}"/>
                        <DatePicker x:Name="StartDatePicker"
                                   Style="{StaticResource FormDatePickerStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Дата окончания:*" 
                                  Style="{StaticResource FormLabelStyle}"/>
                        <DatePicker x:Name="EndDatePicker"
                                   Style="{StaticResource FormDatePickerStyle}"/>
                    </StackPanel>
                </Grid>
                <TextBlock x:Name="DateErrorText"
                          Style="{StaticResource ErrorTextStyle}"
                          Text="Дата окончания не может быть раньше даты начала"/>

                <!-- Описание -->
                <TextBlock Text="Описание:" 
                          Style="{StaticResource FormLabelStyle}"/>
                <TextBox x:Name="DescriptionTextBox"
                        Style="{StaticResource FormInputStyle}"
                        MaxLength="4000"
                        Height="150"
                        VerticalScrollBarVisibility="Auto"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"/>

                <!-- Предупреждение о создании активностей -->
                <Border Background="#FFF3CD"
                        BorderBrush="#856404"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,20,0,10">
                    <StackPanel>
                        <TextBlock Text="⚠️ Внимание"
                                  FontWeight="Bold"
                                  Foreground="#856404"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="При создании мероприятия система автоматически сгенерирует временную сетку для активностей: интервалы по 90 минут с перерывами 15 минут."
                                  FontSize="12"
                                  Foreground="#856404"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="Отмена"
                        Click="CancelButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="{StaticResource SecondaryBackground}"
                        Foreground="{StaticResource TextColor}"/>

                <Button x:Name="SaveButton"
                        Content="Сохранить"
                        Click="SaveButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="{StaticResource AccentColor}"
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>