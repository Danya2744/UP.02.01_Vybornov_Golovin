<Page x:Class="UP._02._01_Vybornov.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Мой профиль"
      FontFamily="Comic Sans MS">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#ABCFCE"/>
        <SolidColorBrush x:Key="AccentColor" Color="#546F94"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
        <SolidColorBrush x:Key="HoverColor" Color="#E0E0E0"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ReadOnlyFieldStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource ErrorColor}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <Button x:Name="BackButton"
                        Content="← Назад"
                        Style="{StaticResource BackButtonStyle}"
                        Padding="15,8"
                        Click="BackButtonClick"
                        DockPanel.Dock="Left"/>

                <TextBlock Text="Мой профиль" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <Border Background="{StaticResource PrimaryBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel>
                            <Grid Width="150" 
                                  Height="150"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"
                                  Cursor="Hand"
                                  MouseEnter="Grid_MouseEnter"
                                  MouseLeave="Grid_MouseLeave"
                                  MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                                <Border Background="{StaticResource SecondaryBackground}"
                                        CornerRadius="75">
                                    <Image x:Name="UserPhotoImage"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <Border x:Name="PhotoOverlay"
                                        Background="#80000000"
                                        CornerRadius="75"
                                        Opacity="0">
                                    <TextBlock Text="Изменить фото"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                            </Grid>

                            <TextBlock Text="Нажмите на фото для изменения"
                                      FontSize="11"
                                      Foreground="{StaticResource SecondaryTextColor}"
                                      HorizontalAlignment="Center"
                                      Margin="0,-15,0,20"
                                      FontStyle="Italic"/>

                            <TextBlock Text="ID Number:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="IdNumberTextBox"
                                    Style="{StaticResource ReadOnlyFieldStyle}"/>

                            <TextBlock Text="Роль:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="RoleTextBox"
                                    Style="{StaticResource ReadOnlyFieldStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Border Background="{StaticResource PrimaryBackground}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Личная информация" 
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource AccentColor}"
                                      Margin="0,0,0,20"/>

                            <TextBlock Text="ФИО:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="FullNameTextBox"
                                    Style="{StaticResource FormInputStyle}"
                                    MaxLength="150"/>
                            <TextBlock x:Name="FullNameErrorText"
                                      Style="{StaticResource ErrorTextStyle}"
                                      Text="Поле ФИО обязательно для заполнения"/>

                            <TextBlock Text="Телефон:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="PhoneTextBox"
                                    Style="{StaticResource FormInputStyle}"
                                    MaxLength="20"/>
                            <TextBlock x:Name="PhoneErrorText"
                                      Style="{StaticResource ErrorTextStyle}"
                                      Text="Введите корректный номер телефона (например: +7(999)123-45-67)"/>

                            <TextBlock Text="Дата рождения:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <DatePicker x:Name="BirthDatePicker"
                                       FontSize="14"
                                       Padding="10"
                                       BorderBrush="{StaticResource BorderColor}"
                                       BorderThickness="1"
                                       Margin="0,0,0,15"
                                       SelectedDateFormat="Short"/>
                            <TextBlock x:Name="BirthDateErrorText"
                                      Style="{StaticResource ErrorTextStyle}"
                                      Text="Дата рождения не может быть в будущем"/>

                            <TextBlock Text="Смена пароля" 
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource AccentColor}"
                                      Margin="0,20,0,10"/>

                            <TextBlock Text="Текущий пароль:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <PasswordBox x:Name="CurrentPasswordBox"
                                        FontSize="14"
                                        Padding="10"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        Margin="0,0,0,10"/>
                            <TextBlock x:Name="CurrentPasswordErrorText"
                                      Style="{StaticResource ErrorTextStyle}"
                                      Text="Необходимо ввести текущий пароль"/>

                            <TextBlock Text="Новый пароль:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <PasswordBox x:Name="NewPasswordBox"
                                        FontSize="14"
                                        Padding="10"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        Margin="0,0,0,10"/>
                            <TextBlock x:Name="NewPasswordErrorText"
                                      Style="{StaticResource ErrorTextStyle}"
                                      Text="Пароль должен содержать минимум 6 символов"/>

                            <TextBlock Text="Повторите новый пароль:" 
                                      Style="{StaticResource FormLabelStyle}"/>
                            <PasswordBox x:Name="ConfirmPasswordBox"
                                        FontSize="14"
                                        Padding="10"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        Margin="0,0,0,20"/>
                            <TextBlock x:Name="ConfirmPasswordErrorText"
                                      Style="{StaticResource ErrorTextStyle}"
                                      Text="Пароли не совпадают"/>

                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right"
                                       Margin="0,20,0,0">
                                <Button x:Name="CancelButton"
                                        Content="Отмена"
                                        Style="{StaticResource BackButtonStyle}"
                                        Padding="15,8"
                                        Click="CancelButtonClick"/>

                                <Button x:Name="SaveButton"
                                        Content="Сохранить изменения"
                                        Style="{StaticResource SaveButtonStyle}"
                                        Padding="15,8"
                                        Margin="10,0,0,0"
                                        Click="SaveButtonClick"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>