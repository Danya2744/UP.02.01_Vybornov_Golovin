<Page x:Class="UP._02._01_Vybornov.Pages.OrganizerEventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Управление мероприятиями"
      FontFamily="Comic Sans MS">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#ABCFCE"/>
        <SolidColorBrush x:Key="AccentColor" Color="#546F94"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="EventCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <Button x:Name="BackButton"
                        Content="← Назад в панель организатора"
                        Style="{StaticResource BackButtonStyle}"
                        Padding="15,8"
                        Click="BackButton_Click"
                        DockPanel.Dock="Left"/>

                <TextBlock Text="Управление мероприятиями" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Поиск:" 
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchTextBox"
                                Style="{StaticResource SearchTextBoxStyle}"
                                Width="250"
                                TextChanged="SearchTextBox_TextChanged">
                            <TextBox.ToolTip>
                                <ToolTip>
                                    Поиск по названию мероприятия, описанию или городу
                                </ToolTip>
                            </TextBox.ToolTip>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Text="Направление:" 
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <ComboBox x:Name="DirectionFilterComboBox"
                                 Style="{StaticResource FilterComboBoxStyle}"
                                 Width="200"
                                 SelectionChanged="DirectionFilterComboBox_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Дата проведения:" 
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <DatePicker x:Name="StartDatePicker"
                                       Width="120"
                                       Margin="0,0,5,0"
                                       SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                            <TextBlock Text=" - "
                                      VerticalAlignment="Center"
                                      Margin="5,0,5,0"/>
                            <DatePicker x:Name="EndDatePicker"
                                       Width="120"
                                       SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="AddEventButton"
                            Content="+ Добавить мероприятие"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddEventButton_Click"
                            Margin="0,0,10,0"/>

                    <Button x:Name="RefreshButton"
                            Content="Обновить"
                            Style="{StaticResource BackButtonStyle}"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <ItemsControl x:Name="EventsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource EventCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                    <Border Width="120" 
                                            Height="120"
                                            Background="{StaticResource SecondaryBackground}"
                                            CornerRadius="4"
                                            BorderBrush="{StaticResource BorderColor}"
                                            BorderThickness="1"
                                            Margin="0,0,0,10">
                                        <Image Source="{Binding LogoPath}"
                                               Stretch="Uniform"/>
                                    </Border>

                                    <TextBlock Text="{Binding DateRange}"
                                              FontSize="12"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding EventName}" 
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource AccentColor}"
                                              Margin="0,0,0,10"/>

                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Направление:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <TextBlock Text="{Binding DirectionName}"
                                                      FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Город:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <TextBlock Text="{Binding CityName}"
                                                      FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Кол-во активностей:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <TextBlock Text="{Binding ActivitiesCount}"
                                                      FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Статус:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <Border Background="{Binding StatusColor}"
                                                    CornerRadius="4"
                                                    Padding="5,2"
                                                    HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding StatusText}"
                                                          FontSize="11"
                                                          FontWeight="Bold"
                                                          Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" 
                                           VerticalAlignment="Center"
                                           Margin="20,0,0,0">
                                    <Button Content="Редактировать"
                                            Tag="{Binding EventId}"
                                            Click="EditEventButton_Click"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Margin="0,0,0,5"/>

                                    <Button Content="Активности"
                                            Tag="{Binding EventId}"
                                            Click="ManageActivitiesButton_Click"
                                            Style="{StaticResource BackButtonStyle}"
                                            Margin="0,0,0,5"/>

                                    <Button Content="Удалить"
                                            Tag="{Binding EventId}"
                                            Click="DeleteEventButton_Click"
                                            Style="{StaticResource DeleteButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>