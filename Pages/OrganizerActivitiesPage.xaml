<Page x:Class="UP._02._01_Vybornov.Pages.OrganizerActivitiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Управление активностями"
      FontFamily="Comic Sans MS">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#ABCFCE"/>
        <SolidColorBrush x:Key="AccentColor" Color="#546F94"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="ActivityCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SortButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <Button x:Name="BackButton"
                        Content="← Назад в панель организатора"
                        Style="{StaticResource BackButtonStyle}"
                        Padding="15,8"
                        Click="BackButton_Click"
                        DockPanel.Dock="Left"/>

                <TextBlock Text="Управление активностями" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Поиск:" 
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchTextBox"
                                Style="{StaticResource SearchTextBoxStyle}"
                                Width="300"
                                TextChanged="SearchTextBox_TextChanged">
                            <TextBox.ToolTip>
                                <ToolTip>
                                    Поиск по названию активности или описанию
                                </ToolTip>
                            </TextBox.ToolTip>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                            <TextBlock Text="Мероприятие:" 
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,5"/>
                            <ComboBox x:Name="EventFilterComboBox"
                                     Style="{StaticResource FilterComboBoxStyle}"
                                     Width="250"
                                     SelectionChanged="EventFilterComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Сортировка:" 
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="SortAscButton"
                                        Content="По времени ↑"
                                        Style="{StaticResource SortButtonStyle}"
                                        Click="SortAscButton_Click"/>

                                <Button x:Name="SortDescButton"
                                        Content="По времени ↓"
                                        Style="{StaticResource SortButtonStyle}"
                                        Click="SortDescButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="AddActivityButton"
                            Content="+ Добавить активность"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddActivityButton_Click"
                            Margin="0,0,10,0"/>

                    <Button x:Name="RefreshButton"
                            Content="Обновить"
                            Style="{StaticResource BackButtonStyle}"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <ItemsControl x:Name="ActivitiesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ActivityCardStyle}"
                                MouseLeftButtonDown="ActivityCard_MouseLeftButtonDown"
                                Tag="{Binding ActivityId}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                  Text="{Binding ActivityName}" 
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource AccentColor}"
                                                  TextWrapping="Wrap"/>

                                        <Border Grid.Column="1"
                                                Background="{Binding HasJuryColor}"
                                                CornerRadius="12"
                                                Padding="8,3"
                                                Margin="10,0,0,0">
                                            <TextBlock Text="{Binding HasJuryText}"
                                                      FontSize="11"
                                                      FontWeight="Bold"
                                                      Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Мероприятие:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <TextBlock Text="{Binding EventName}"
                                                      FontSize="12"
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="День:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <TextBlock Text="{Binding ActivityDay}"
                                                      FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Время начала:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <TextBlock Text="{Binding StartTime}"
                                                      FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Продолжительность:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Width="120"/>
                                            <TextBlock Text="{Binding Duration}"
                                                      FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Margin="0,10,0,0">
                                            <TextBlock Text="Описание:" 
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Margin="0,0,0,5"/>
                                            <Border Background="#F8F8F8"
                                                    BorderBrush="{StaticResource BorderColor}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="10">
                                                <TextBlock Text="{Binding Description}"
                                                          FontSize="12"
                                                          Foreground="{StaticResource TextColor}"
                                                          TextWrapping="Wrap"
                                                          MaxHeight="100"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" 
                                           VerticalAlignment="Center"
                                           Margin="20,0,0,0">
                                    <Button Content="Редактировать"
                                            Tag="{Binding ActivityId}"
                                            Click="EditActivityButton_Click"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Margin="0,0,0,5"/>

                                    <Button Content="Удалить"
                                            Tag="{Binding ActivityId}"
                                            Click="DeleteActivityButton_Click"
                                            Style="{StaticResource DeleteButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>