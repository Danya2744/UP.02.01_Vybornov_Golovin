<Page x:Class="UP._02._01_Vybornov.Pages.ParticipantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Участники мероприятия"
      FontFamily="Comic Sans MS">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#ABCFCE"/>
        <SolidColorBrush x:Key="AccentColor" Color="#546F94"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ParticipantCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <Button x:Name="BackButton"
                        Content="← Назад"
                        Style="{StaticResource BackButtonStyle}"
                        Padding="15,8"
                        Click="BackButtonClick"
                        DockPanel.Dock="Left"/>

                <TextBlock x:Name="PageTitleTextBlock" 
                          Text="Участники мероприятия" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Контент -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel>
                <!-- Информация о мероприятии -->
                <Border Background="{StaticResource PrimaryBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="EventTitleTextBlock" 
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource AccentColor}"
                                  Margin="0,0,0,10"/>

                        <TextBlock x:Name="EventInfoTextBlock"
                                  FontSize="14"
                                  Foreground="{StaticResource TextColor}"/>
                    </StackPanel>
                </Border>

                <!-- Заголовок участников -->
                <TextBlock Text="Зарегистрированные участники:" 
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="{StaticResource AccentColor}"
                          Margin="0,0,0,10"/>

                <!-- Список участников -->
                <ItemsControl x:Name="ParticipantsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ParticipantCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Фото участника -->
                                    <Border Grid.Column="0" 
                                            Width="50" 
                                            Height="50"
                                            Background="{StaticResource SecondaryBackground}"
                                            CornerRadius="25"
                                            Margin="0,0,15,0">
                                        <Image Source="{Binding PhotoPath, FallbackValue=/Resources/default_user.png}"
                                               Stretch="Uniform"/>
                                    </Border>

                                    <!-- Информация об участнике -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding FullName}"
                                                  FontSize="14"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource TextColor}"
                                                  Margin="0,0,0,5"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ID: "
                                                      FontSize="12"
                                                      Foreground="{StaticResource SecondaryTextColor}"/>
                                            <TextBlock Text="{Binding IdNumber}"
                                                      FontSize="12"
                                                      Foreground="{StaticResource TextColor}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Дата регистрации: "
                                                      FontSize="12"
                                                      Foreground="{StaticResource SecondaryTextColor}"/>
                                            <TextBlock Text="{Binding RegistrationDate, StringFormat=dd.MM.yyyy HH:mm}"
                                                      FontSize="12"
                                                      Foreground="{StaticResource TextColor}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Если участников нет -->
                <TextBlock x:Name="NoParticipantsText"
                          Text="На это мероприятие еще не зарегистрировались участники"
                          FontSize="14"
                          Foreground="{StaticResource SecondaryTextColor}"
                          FontStyle="Italic"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>