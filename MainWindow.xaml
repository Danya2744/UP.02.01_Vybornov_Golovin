<Window x:Class="UP._02._01_Vybornov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP._02._01_Vybornov"
        mc:Ignorable="d"
        Title="Система конференций - Авторизация" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        FontFamily="Comic Sans MS"
        Icon="/Resources/icon.ico">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#ABCFCE"/>
        <SolidColorBrush x:Key="AccentColor" Color="#546F94"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#FF5252"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>

        <Style x:Key="EventCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource SecondaryBackground}" 
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <Image Source="/Resources/logo.png" 
                          Width="50" 
                          Height="50" 
                          Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Система организации конференций" 
                                  FontSize="20" 
                                  FontWeight="Bold"/>
                        <TextBlock Text="Управление мероприятиями и участниками" 
                                  FontSize="12"
                                  Foreground="{StaticResource SecondaryTextColor}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0">
                    <TextBlock x:Name="UserInfoTextBlock" 
                              Text="Гость" 
                              FontSize="16"
                              HorizontalAlignment="Right"/>
                    <TextBlock x:Name="UserRoleTextBlock" 
                              Text="Неавторизованный пользователь" 
                              FontSize="12"
                              Foreground="{StaticResource SecondaryTextColor}"
                              HorizontalAlignment="Right"/>
                </StackPanel>

                <Button Grid.Column="3" 
                       x:Name="LogoutButton" 
                       Content="Выйти" 
                       Click="LogoutButtonClick"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Padding="15,8"
                       HorizontalAlignment="Right"
                       Visibility="Collapsed"/>
            </Grid>
        </Border>

        <Frame Grid.Row="1" 
               x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource PrimaryBackground}"/>

        <StatusBar Grid.Row="2" 
                  Background="{StaticResource SecondaryBackground}" 
                  Padding="10">
            <StatusBarItem/>
        </StatusBar>
    </Grid>
</Window>